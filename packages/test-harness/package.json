      "@types/react": "^16",
      "@types/react-dom": "^16",
      "react": "16.8.0",
      "react-dom": "16.8.0",
      "react-test-renderer": "16.8.0"
    }
  },
  "switch:react-17": {
    "dependencies": {
      "@testing-library/react": "^12",
      "@testing-library/react-hooks": "latest"
    },
    "devDependencies": {
      "@types/react": "^17",
      "@types/react-dom": "^17",
      "react": "17.0.0",
