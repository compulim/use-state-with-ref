    }
  },
  "switch:react-18": {
    "dependencies": {},
    "devDependencies": {
      "@types/react": "^18",
      "@types/react-dom": "^18",
      "react": "18.0.0",
      "react-dom": "18.0.0",
      "react-test-renderer": "18.0.0"
    }
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
